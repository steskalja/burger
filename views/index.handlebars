
<div class="container">
  <h1>Eat-Da-Burger</h1>
<div class="row">
  <div class="col">
<h2>Burgers that are not eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
  <div class="col">
<h2>Burgers that are Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
  <div class="col"></div>
  <div class="col" style="background: whitesmoke">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
<div class="col"></div>
</div>
</div>